{
  "manifest_version": 2,
  "name": "Modify CSS and HTML",
  "version": "0.1.0",
  "description": "Lateral blog post demo extension",
  "browser_action": {
    "default_popup": "./index.html"
  },
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["script.js"]
  },
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["content.js"],
    "matches": ["<all_urls>"]
  }]

}
