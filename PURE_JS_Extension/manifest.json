{
  "name": "Spoil-Me-Not",
  "version": "1.1",
  "description": "Extension used to block snow spoilers",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "activeTab", 
    "declarativeContent", 
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Spoil-Me-Not"
  },
  "background": {
    "scripts": ["content.js"]
  },
  "content_scripts": [{
    "css": ["popup.css"],
    "js": ["content.js"],
    "matches": ["<all_urls>"]
  }],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
